<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reach_android" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="dividerColor">@color/black</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="SearchView">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#99FFFFFF</item>
        <item name="android:tint">@color/white</item>
    </style>
</resources>